{{!< default}}
<div class=" pt-16 md:pt-0">
  {{!-- HERO HEADER --}}
  {{#get "posts" filter="featured:true" limit="1" include="tags,authors"}}
    {{#if posts}}
      {{#foreach posts }}
        {{> "hero-index"}}
      {{/foreach}}
    {{/if}}
  {{/get}}

  {{!-- PAGE CONTENT --}}
  <div class="gh-page">
    <div class="gh-container">

      <h2 class="text-3xl font-bold mb-4 text-gradient-ps">Nos derniers tests</h2>
      {{#get "posts" filter="featured:false + tags:['test']" limit="4" include="tags,authors"}}
        {{> "feed"}}
      {{/get}}
      <div class="mt-4 flex justify-center sm:justify-end">
        <a href="/tag/test" class="btn btn-primary btn-sm">Voir plus</a>
      </div>

      <div class="divider"></div>

      <h2 class="text-3xl font-bold mb-4 text-gradient-sp">Nos derniers articles</h2>
      {{#get "posts" filter="featured:false + tags:['news']" limit="4" include="tags,authors"}}
        {{> "feed"}}
      {{/get}}
      <div class="mt-4 flex justify-center sm:justify-end">
        <a href="/tag/news" class="btn btn-primary btn-sm">Voir plus</a>
      </div>

      <div class="divider"></div>

      <h2 class="text-3xl font-bold mb-4 text-gradient-ps">Nos dernières vidéos</h2>
      {{#get "posts" filter="featured:false + tags:['video']" limit="4" include="tags,authors"}}
        {{> "feed"}}
      {{/get}}
      <div class="mt-4 flex justify-center sm:justify-end">
        <a href="/tag/video" class="btn btn-primary btn-sm">Voir plus</a>
      </div>
      
      <div class="mb-12">
        {{> "quote"}}
      </div>

      {{!-- If JS isn't enabled, fallback to standard pagination --}}
      <noscript>
        <div class="gh-pagination">
          {{pagination}}
        </div>
      </noscript>
    </div>
  </div>
</div>
