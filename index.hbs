{{!< default}}
<div class=" pt-16 md:pt-0">
  {{!-- HERO HEADER --}}
  {{#get "posts" filter="featured:true" limit="1" include="tags,authors"}}
    {{#if posts}}
      {{#foreach posts }}
        {{> "hero-index"}}
      {{/foreach}}
    {{/if}}
  {{/get}}

  {{!-- PAGE CONTENT --}}
  <div class="gh-page">
    <div class="gh-container">
      
      <div class="flex justify-center mt-12 mb-6 md:mb-0">
        <p class="text-4xl font-bold flex flex-col text-center md:text-end gap-4">
          <q>{{@site.description}}</q>
          <span class="text-base italic md:mr-8">@Dadgeek</span>
        </p>
      </div>

      {{> "postfeed"}}

      {{!-- If JS isn't enabled, fallback to standard pagination --}}
      <noscript>
        <div class="gh-pagination">
          {{pagination}}
        </div>
      </noscript>
    </div>
  </div>
</div>
